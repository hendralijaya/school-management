{
    "openapi": "3.0.2",
    "info": {
        "title": "School Management API",
        "version": "1.0"
    },
    "servers": [{ "url": "https://localhost:8000" }],
    "paths": {
        "/api/v1/auth/login": {
            "post": {
                "tags": ["Auth"],
                "summary": "Login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Login"
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/register": {
            "post": {
                "tags": ["Auth"],
                "summary": "Register",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Register"
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Login": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "hendra.lijaya@student.pradita.ac.id",
                        "description": "Email",
                        "required": true,
                        "format": "email"
                    },
                    "password": {
                        "type": "string",
                        "example": "123456",
                        "description": "Password",
                        "required": true,
                        "minLength": 6
                    }
                }
            },
            "Register": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Hendra Lijaya",
                        "description": "Name",
                        "required": true
                    },
                    "email": {
                        "type": "string",
                        "example": "hendra.lijaya@student.pradita.ac.id",
                        "description": "Email",
                        "required": true,
                        "format": "email"
                    },
                    "password": {
                        "type": "string",
                        "example": "123456",
                        "description": "Password",
                        "required": true,
                        "minLength": 6
                    },
                    "password_confirmation": {
                        "type": "string",
                        "example": "123456",
                        "description": "Password Confirmation",
                        "required": true,
                        "minLength": 6
                    }
                }
            }
        }
    }
}
